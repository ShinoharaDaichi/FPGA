`timescale 1 ps/ 1 ps
module add1bit_vlg_sample_tst(
	a,
	b,
	cin,
	sampler_tx
);
input  a;
input  b;
input  cin;
output sampler_tx;

reg sample;
time current_time;
always @(a or b or cin)
                                                                                
begin                                                 
 if ($realtime > 0)                                   
 begin                                                
	if ($realtime == 0 || $realtime != current_time)  
	begin									          
		if (sample === 1'bx)                          
			sample = 0;                               
		else                                          
			sample = ~sample;                         
	end										          
	current_time = $realtime;					      
 end                                                  
end                                                   

assign sampler_tx = sample;
endmodule

module add1bit_vlg_check_tst (
	cout,
	somme,
	sampler_rx
);
input  cout;
input  somme;
input sampler_rx;

reg  cout_expected;
reg  somme_expected;

reg  cout_prev;
reg  somme_prev;

reg  cout_expected_prev;
reg  somme_expected_prev;

reg  last_cout_exp;
reg  last_somme_exp;

reg trigger;

integer i;
integer nummismatches;

reg [1:2] on_first_change ;


initial
begin
trigger = 0;
i = 0;
nummismatches = 0;
on_first_change = 2'b1;
end

// update real /o prevs

always @(trigger)
begin
	cout_prev = cout;
	somme_prev = somme;
end

// update expected /o prevs

always @(trigger)
begin
	cout_expected_prev = cout_expected;
	somme_expected_prev = somme_expected;
end



// expected cout
initial
begin
	cout_expected = 1'bX;
end 

// expected somme
initial
begin
	somme_expected = 1'bX;
end 
// generate trigger
always @(cout_expected or cout or somme_expected or somme)
begin
	trigger <= ~trigger;
end

always @(posedge sampler_rx or negedge sampler_rx)
begin
`ifdef debug_tbench
	$display("Scanning pattern %d @time = %t",i,$realtime );
	i = i + 1;
	$display("| expected cout = %b | expected somme = %b | ",cout_expected_prev,somme_expected_prev);
	$display("| real cout = %b | real somme = %b | ",cout_prev,somme_prev);
`endif
	if (
		( cout_expected_prev !== 1'bx ) && ( cout_prev !== cout_expected_prev )
		&& ((cout_expected_prev !== last_cout_exp) ||
			on_first_change[1])
	)
	begin
		$display ("ERROR! Vector Mismatch for output port cout :: @time = %t",  $realtime);
		$display ("     Expected value = %b", cout_expected_prev);
		$display ("     Real value = %b", cout_prev);
		nummismatches = nummismatches + 1;
		on_first_change[1] = 1'b0;
		last_cout_exp = cout_expected_prev;
	end
	if (
		( somme_expected_prev !== 1'bx ) && ( somme_prev !== somme_expected_prev )
		&& ((somme_expected_prev !== last_somme_exp) ||
			on_first_change[2])
	)
	begin
		$display ("ERROR! Vector Mismatch for output port somme :: @time = %t",  $realtime);
		$display ("     Expected value = %b", somme_expected_prev);
		$display ("     Real value = %b", somme_prev);
		nummismatches = nummismatches + 1;
		on_first_change[2] = 1'b0;
		last_somme_exp = somme_expected_prev;
	end

	trigger <= ~trigger;
end
initial 

begin 
$timeformat(-12,3," ps",6);
#200000;
if (nummismatches > 0)
	$display ("%d mismatched vectors : Simulation failed !",nummismatches);
else
	$display ("Simulation passed !");
$finish;
end 
endmodule

module add1bit_vlg_vec_tst();
// constants                                           
// general purpose registers
reg a;
reg b;
reg cin;
// wires                                               
wire cout;
wire somme;

wire sampler;                             

// assign statements (if any)                          
add1bit i1 (
// port map - connection between master ports and signals/registers   
	.a(a),
	.b(b),
	.cin(cin),
	.cout(cout),
	.somme(somme)
);

// a
initial
begin
	repeat(2)
	begin
		a = 1'b0;
		a = #40000 1'b1;
		# 40000;
	end
	a = 1'b0;
end 

// b
always
begin
	b = 1'b0;
	b = #20000 1'b1;
	#20000;
end 

// cin
always
begin
	cin = 1'b0;
	cin = #10000 1'b1;
	#10000;
end 

add1bit_vlg_sample_tst tb_sample (
	.a(a),
	.b(b),
	.cin(cin),
	.sampler_tx(sampler)
);

add1bit_vlg_check_tst tb_out(
	.cout(cout),
	.somme(somme),
	.sampler_rx(sampler)
);
endmodule

